<div class="container mt-5">
  <h1>Add a new Movie</h1>
   <%= simple_form_for(@movie) do |m| %>
  <%= m.input :title %>
  <%= m.input :overview %>
  <%= m.input :poster_url %>
  <%= m.input :rating %>
  <%= m.submit %>
<% end %>
 <div class="actions">
    <br>
     <button><%= link_to "Back to main page", movies_path %></button>
    </div>
</div>
